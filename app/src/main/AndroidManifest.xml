<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scenario.robson.testforscenario" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ScenarioApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".views.activity.NavigationDrawerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activity.ProjectActivity"
            android:parentActivityName=".views.activity.NavigationDrawerActivity" />
        <activity
            android:name=".views.activity.AmbientActivity"
            android:parentActivityName=".views.activity.NavigationDrawerActivity" />
        <activity
            android:name=".views.activity.ModuleActivity"
            android:parentActivityName=".views.activity.NavigationDrawerActivity" />
        <activity
            android:name=".views.activity.LightFixtureActivity"
            android:parentActivityName=".views.activity.NavigationDrawerActivity" />
        <activity
            android:name=".views.activity.LigtFixtureModuleActivity"
            android:parentActivityName=".views.activity.NavigationDrawerActivity" />
        <activity
            android:name=".views.activity.ModuleAmbientActivity"
            android:parentActivityName=".views.activity.NavigationDrawerActivity" >
        </activity>
        <activity
            android:name=".views.activity.AmbientEditActivity"
            android:parentActivityName=".views.activity.NavigationDrawerActivity" >
        </activity>
        <activity android:name=".views.activity.ProjectDetailActivity"
            android:parentActivityName=".views.activity.NavigationDrawerActivity" >
        </activity>
    </application>

</manifest>
